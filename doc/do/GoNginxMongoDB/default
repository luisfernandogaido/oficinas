server {
	server_name fipe.gaido.dev;
	location / {
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header Host $host;
        proxy_pass http://127.0.0.1:4010;
  	    access_log /var/log/nginx/fipe-access.log combined;
  	    error_log /var/log/nginx/fipe-error.log;
	}

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/fipe.gaido.dev/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/fipe.gaido.dev/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    if ($host = fipe.gaido.dev) {
        return 301 https://$host$request_uri;
    } # managed by Certbot
    listen 80;
	server_name fipe.gaido.dev;
    return 404; # managed by Certbot
}

server {
	server_name qrcode.gaido.dev;
	location / {
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header Host $host;
        proxy_pass http://127.0.0.1:4011;
  	    access_log /var/log/nginx/qrcode-access.log combined;
  	    error_log /var/log/nginx/qrcode-error.log;
	}


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/qrcode.gaido.dev/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/qrcode.gaido.dev/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}



server {
    if ($host = qrcode.gaido.dev) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


	server_name qrcode.gaido.dev;
    listen 80;
    return 404; # managed by Certbot


}