server {
    server_name static.gaido.space;
    root /var/www/html/static;
    access_log off;
    server_tokens off;
    index index.html index.htm;
    client_max_body_size 1024M;
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    location ~* \.(engine|inc|info|install|make|module|profile|test|po|sh|sql|theme|tpl(\.php)?|xtmpl|yml|bak|gz|conf|log|ini)$ {
        deny all;
    }
    location / {
        try_files $uri =404;
        expires 1y;
        add_header Cache-Control "public, max-age=31536000, immutable";
        gzip off;
        sendfile on;
        tcp_nopush on;
    }
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/static.gaido.space/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/static.gaido.space/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}
server {
    if ($host = static.gaido.space) {
        return 301 https://$host$request_uri;
    } # managed by Certbot
    server_name static.gaido.space;
    listen 80;
    return 404; # managed by Certbot
}

server {
    server_name storage.gaido.space;
    client_max_body_size 2048M;
    location / {
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header Host $host;
        proxy_pass http://127.0.0.1:4023;
        access_log /var/log/nginx/storage-access.log combined;
        error_log /var/log/nginx/storage-error.log;
    }
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/storage.gaido.space/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/storage.gaido.space/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = storage.gaido.space) {
        return 301 https://$host$request_uri;
    } # managed by Certbot
    server_name storage.gaido.space;
    listen 80;
    return 404; # managed by Certbot
}