server {
    server_name vault.gaido.space;
    root /var/www/html/static;
    access_log off;
    server_tokens off;
    index index.html index.htm;
    client_max_body_size 1024M;
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    location ~* \.(engine|inc|info|install|make|module|profile|test|po|sh|sql|theme|tpl(\.php)?|xtmpl|yml|bak|gz|conf|log|ini)$ {
        deny all;
    }
    location / {
        try_files $uri =404;
        expires 1y;
        add_header Cache-Control "public, max-age=31536000, immutable";
        gzip off;
        sendfile on;
        tcp_nopush on;
    }
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/vault.gaido.space/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/vault.gaido.space/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}
server {
    if ($host = vault.gaido.space) {
        return 301 https://$host$request_uri;
    } # managed by Certbot
    server_name vault.gaido.space;
    listen 80;
    return 404; # managed by Certbot
}